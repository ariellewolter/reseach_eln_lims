datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Lab {
  id   String @id @default(uuid())
  name String
}

model User {
  id     String @id @default(uuid())
  email  String @unique
  name   String?
  role   String
  labId  String?
}

model InventoryItem {
  id     String @id @default(uuid())
  name   String
  type   String
  qty    Int
  units  String?
  labId  String
}

model Task {
  id          String    @id @default(uuid())
  title       String
  status      String
  assigneeId  String?
  due         DateTime?
  labId       String
}
