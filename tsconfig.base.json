{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/personal/src/*"],
      "@research/types": ["packages/types/src"],
      "@research/types/*": ["packages/types/src/*"],
      "@research/ui": ["packages/ui/src"],
      "@research/ui/*": ["packages/ui/src/*"],
      "@research/utils": ["packages/utils/src"],
      "@research/utils/*": ["packages/utils/src/*"],
      "@research/theme": ["packages/theme/src"]
    }
  }
}
