{
  "name": "research-suite",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["apps/*", "packages/*", "servers/*"],
  "scripts": {
    "api:personal": "pnpm -C servers/personal-api dev",
    "api:lims": "pnpm -C servers/lims-api dev",
    "web:personal": "pnpm --filter @apps/personal dev",
    "web:lims": "pnpm --filter @apps/lims dev",
    "dev": "run-p -l api:personal api:lims web:personal web:lims",
    "build": "pnpm -r build",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  }
}
